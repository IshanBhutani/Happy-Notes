<Page
    x:Class="HappyNotes.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HappyNotes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <RelativePanel>
            <Button x:ConnectionId='7' Name="btnHamBurgerMenu"
                    FontFamily="Segoe MDl2 Assets"
                    Content="&#xE700;"
                    FontSize="25"
                    RelativePanel.AlignLeftWithPanel="True"
                                                  />
            <Button x:ConnectionId='8' Name="btnBack"
                    FontFamily="Segoe MDL2 Assets"
                    Content="&#xE0D5;"
                    FontSize="25"
                    RelativePanel.RightOf="btnHamBurgerMenu"                    
                                         />
            <TextBlock x:ConnectionId='9' Name="txtBlTitle"
                       Text=""
                       FontSize="20"
                       RelativePanel.RightOf="btnBack"
                       Margin="35,5,0,0"
                       FontWeight="Bold"/>
            <TextBox x:ConnectionId='10' Name="txtSearch"
                     PlaceholderText="Search"
                     RelativePanel.LeftOf="btnSearch"
                     Width="200"/>
            <!--BorderThickness=""/>-->
            <Button x:ConnectionId='11' Name="btnSearch"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="20"
                    Content="&#xE11A;"
                    RelativePanel.AlignRightWithPanel="True"/>
        </RelativePanel>

        <SplitView x:ConnectionId='1' Grid.Row="1"
                   Name="MySplitView"
                   OpenPaneLength="270"
                   CompactPaneLength="45"
                   DisplayMode="CompactOverlay">
            <SplitView.Pane>
                <ListBox x:ConnectionId='2' Name="MyListBox"
                         SelectionMode="Single"
                                                                      >
                    <ListBoxItem x:ConnectionId='3' Name="lstBxHome">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDl2 Assets"
                                       FontSize="18"
                                       Text="&#xE80F;"
                                       Margin="0,3,0,0"/>
                            <TextBlock FontSize="18"
                                       Text="Notes"
                                       Margin="20,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='4' Name="lstBxNotes">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDl2 Assets"
                                       FontSize="18"
                                       Text="&#xED64;"
                                       Margin="0,3,0,0"/>
                            <TextBlock FontSize="18"
                                       Text="Notes"
                                       Margin="20,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='5' Name="lstBxLists">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDl2 Assets"
                                       FontSize="18"
                                       Text="&#xE762;"
                                       Margin="0,3,0,0"/>
                            <TextBlock FontSize="18"
                                       Text="Lists"
                                       Margin="20,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>
            <SplitView.Content>
                <Frame x:ConnectionId='6' Name="MyFrame"></Frame>
            </SplitView.Content>
        </SplitView>
    
    </Grid>
</Page>

